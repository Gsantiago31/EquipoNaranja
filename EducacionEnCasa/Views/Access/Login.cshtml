@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Layout";
}
<h2>Login</h2>
<div class="row">
    <form action="@Url.Content("~/Login")" method="post">
        <div class="form-group">
            <label>Usuario</label>
            <input type="email" name="User /">
        </div>
        <div class="form-group">
            <label>Contraseña</label>
            <input type="password" name="Pass /">
        </div>
        <div class="form-group">
            <input type="button" value="Ingresar" class="btn btn-success"/>
        </div>
    </form>
</div>